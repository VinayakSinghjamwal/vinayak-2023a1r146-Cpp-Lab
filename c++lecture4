â€‹/* program to demonstrate working with constructor and destructor with program*/
#include <iostream>
    using namespace std;
class A
{
private:
    int x;

public:
    A()
    {
        x = 10;
        cout << "constructor invoked x=" << x;
    }

public:
    void f1()
    {
        cout << "\n function 1";
    }

public:
    void f2()
    {
        cout << "\n Function 2";
    }

public:
    ~A()
    {
        cout < "\n destructor invoked x= " << x;
    }
};
int main()
{
    A obj;
    obj.f2();
    obj.f1();
    return 0;
}
